<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".widget.activity.ForegroundImageViewActivity">

    <com.mole.androidcodestudy.view.ForegroundImageView
        android:id="@+id/iv_foreground"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mole.androidcodestudy.view.ForegroundImageView
        android:id="@+id/iv_foreground_alpha"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_foreground" />

    <com.mole.androidcodestudy.view.ForegroundImageView
        android:id="@+id/iv_foreground_alpha_over"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_foreground_alpha" />

</androidx.constraintlayout.widget.ConstraintLayout>